@model IEnumerable<StudntProjectMVC.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Öğrenciler</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyad)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.TCKimlikNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AldigiEgitim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasariDurumu)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TCKimlikNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AldigiEgitim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasariDurumu)
            </td>
            <td>
                <a href="/Students/Edit/@item.Id" class="btn btn-warning btn-xs" title="Düzenle">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>
                @*<a href="/Students/Details/@item.Id" class="btn btn-info btn-xs" title="Detay">
                    <span class="glyphicon glyphicon-search"></span>
                </a>*@
                <a href="/Students/Delete/@item.Id" class="btn btn-danger btn-xs" title="Sil">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }

</table>
